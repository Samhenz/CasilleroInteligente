<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SerialTool">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/blue_900"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="7dp"
        android:paddingRight="7dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:text="Puerto"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner_devices"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@color/blue_200"
            android:textSize="14sp"
            tools:entries="@array/baudrates"
            tools:ignore="TouchTargetSizeCheck" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:text="Baudrate"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner_baudrate"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:background="@color/blue_200"
            android:textSize="14sp"
            tools:entries="@array/baudrates"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/btn_open_device"
            android:layout_width="92dp"
            android:layout_height="56dp"
            android:layout_marginLeft="7dp"
            android:text="Abrir puerto"
            android:textSize="14sp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:context="com.css.casillerointeligentecss.SerialTool">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <EditText
                android:id="@+id/et_data"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:digits="0123456789abcdefABCDEF"
                android:hint="Comandos HEX"
                android:inputType="textCapCharacters"
                android:minHeight="48dp"
                android:singleLine="true"
                android:textSize="16dp" />

            <Button
                android:id="@+id/btn_send_data"
                android:layout_width="500px"
                android:layout_height="wrap_content"
                android:text="Enviar" />

            <Button
                android:id="@+id/btn_load_list"
                android:layout_width="500px"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:text="Cargar cmd list" />

            <Button
                android:id="@+id/button"
                android:layout_width="500px"
                android:layout_height="150px"
                android:text="1"
                android:backgroundTint="#4CAF50"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="500px"
                android:layout_height="150px"
                android:text="2"
                android:backgroundTint="#4CAF50"/>

            <Button
                android:id="@+id/button3"
                android:layout_width="500px"
                android:layout_height="150px"
                android:text="3"
                android:backgroundTint="#4CAF50"/>

            <Button
                android:id="@+id/button4"
                android:layout_width="500px"
                android:layout_height="150px"
                android:text="4"
                android:backgroundTint="#4CAF50"/>

            <Button
                android:id="@+id/button5"
                android:layout_width="500px"
                android:layout_height="150px"
                android:text="5"
                android:backgroundTint="#4CAF50"/>

            <Button
                android:id="@+id/button6"
                android:layout_width="500px"
                android:layout_height="150px"
                android:text="6"
                android:backgroundTint="#4CAF50"/>

            <Button
                android:id="@+id/button7"
                android:layout_width="500px"
                android:layout_height="150px"
                android:text="7"
                android:backgroundTint="#4CAF50"/>

            <Button
                android:id="@+id/button8"
                android:layout_width="500px"
                android:layout_height="150px"
                android:text="8"
                android:backgroundTint="#4CAF50"/>

            <Button
                android:id="@+id/button9"
                android:layout_width="500px"
                android:layout_height="150px"
                android:text="9"
                android:backgroundTint="#4CAF50"/>

            <Button
                android:id="@+id/button10"
                android:layout_width="500px"
                android:layout_height="150px"
                android:text="10"
                android:backgroundTint="#4CAF50"/>

        </LinearLayout>

        <include
            layout="@layout/include_fragment_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>
</LinearLayout>